.section
  .container
    .title
      h2.heading
        | ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email, "メールアドレス"
        br
        = f.email_field :email, autofocus: true, autocomplete: "email", role: "button", class:"btn btn-default"
      .field
        = f.label :password, "パスワード"
        br
        = f.password_field :password, autocomplete: "off", role: "button", class:"btn btn-default"
      - if devise_mapping.rememberable?
        .field-r
          = f.check_box :remember_me
          = f.label :remember_me, "ログインしたままにする"
      .actions
        = f.submit "ログイン", class: "btn btn-default"
    = render "users/shared/links"
